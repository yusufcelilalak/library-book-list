@model IEnumerable<Book>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3 w-75">

    <div class="row my-3">
        <div class="col-6">
            <h2>
                Book List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Add" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i> &nbsp; Add Book</a>
        </div>
    </div>



    <table class="table table-bordered table-striped mx-auto mt-5" >
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
                <th>
                    Category
                </th>
                <th>
                    Page
                </th>
                <th>
                    Added Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>
                        @obj.ID
                    </td>
                    <td>
                        @obj.Title
                    </td>
                    <td>
                        @obj.Author
                    </td>
                    <td>
                        @obj.Category
                    </td>
                    <td>
                        @obj.Page
                    </td>
                    <td>
                        @obj.AddedDate
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

