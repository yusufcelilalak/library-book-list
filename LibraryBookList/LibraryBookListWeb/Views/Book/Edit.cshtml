@model Book

<form method="post" asp-action="Edit">
    <div class="row mt-5 w-75 mx-auto">
        <div class="p-3">
            <h2 class="border-bottom">Edit Book</h2>
        </div>
        <div class="col-sm-6 col-12 mb-3">
            <label class="mb-1" asp-for="Title"></label>
            <input class="form-control" type="text" asp-for="Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col-sm-6 col-12 mb-3">
            <label class="mb-1" asp-for=Author></label>
            <input class="form-control" type="text" asp-for="Author">
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="col-sm-6 col-12 mb-3">
            <label class="mb-1" asp-for="Category"></label>
            <input class="form-control" type="text" asp-for="Category">
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="col-sm-6 col-12 mb-3">
            <label class="mb-1" asp-for="Page"></label>
            <input class="form-control" type="text" asp-for="Page">
            <span asp-validation-for="Page" class="text-danger"></span>
        </div>
        <div class="mt-3 text-end">
            <a asp-controller="Book" asp-action="Index" class="btn btn-outline-dark me-1">Back to Book List</a>
            <button type="submit" class="btn btn-outline-success float-right">Edit</button>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


